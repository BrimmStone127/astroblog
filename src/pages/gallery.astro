---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Gallery";

// Import the images from your assets folder
const images = [
    "/assets/images/forest-background1.png",
    "/assets/images/horizon1.png",
    "/assets/images/moon1.png",
    "/assets/images/sky_day_night-Sheet.png",
    "/assets/images/sky1.png",
    "/assets/images/sun1.png",
];
---

<BaseLayout pageTitle={pageTitle}>
    <style>
        /* Add some styles to handle the image display */
        .gallery {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        .gallery img {
            width: auto;
            height: auto;
            object-fit: contain;
            margin: 10px;
        }
    </style>
    <div class="gallery">
        {images.map((image) => <img src={image} alt="" loading="lazy" />)}
    </div>
</BaseLayout>
