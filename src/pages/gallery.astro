---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Gallery";

// Generate an array of image paths
const images = Array.from({ length: 30 }, (_, i) => `../assets/images/${i + 1}.jpg`);
---

<BaseLayout pageTitle={pageTitle}>
    <style>
        /* Add some styles to handle the image display */
        .gallery {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        .gallery img {
            width: 50%;
            height: auto;
            object-fit: contain;
            margin: 10px;
        }
    </style>
    <div class="gallery">
        {images.map((image) => <img src={image} alt="" loading="lazy" />)}
    </div>
</BaseLayout>